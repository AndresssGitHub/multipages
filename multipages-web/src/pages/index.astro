---
import Layout from '../layouts/Layout.astro';
---

<Layout title='Welcome to my project'>
	<span class="font-myfont text-blue-500 font-bold text-5xl">Hello world!</span>
	<div class="text-red-600 text-6xl font-extrabold">
		Cruel 
	</div>
	<div id="btn" class="bg-blue-400 p-3 m-3 rounded-md shadow-md hover:bg-blue-500 transition-colors text-white font-semibold  inline-block">
		Click me
	</div>
</Layout>

<script>
	const btn = document.getElementById("btn")

	btn.addEventListener("click", function(e){
		const elm = e.target
		//elm.classList.remove("bg-blue-400")
		//elm.classList.add("bg-red-400")
		elm.classList.replace("bg-blue-400", "bg-green-500")

		elm.innerText = "Ouch!"

		const myDiv = document.createElement("div")
		myDiv.innerText = "Hello new world!"
		myDiv.classList.add("bg-pink-500", "text-white")

		document.body.appendChild(myDiv)

		console.log("I'm in console", e.target.classlist)
	})
</script>


